import 'dotenv/config';
import express, { Request, Response } from 'express';

import partnerValidation from './partner_validation';
import aiRouter from './ai';
import { apiKeyAuth } from './src/middleware/apiKeyAuth';
import { requestLogger } from './src/middleware/logger';
import { rateLimiter } from './src/middleware/rateLimit';

const app = express();

// PORT configurÃ© via .env ou 3000 par dÃ©faut
const PORT: number = Number(process.env.PORT) || 3000;

// ðŸ” Logger global de toutes les requÃªtes
app.use(requestLogger);

// Middleware global pour parser le JSON
app.use(express.json());

// âœ… Route de santÃ© publique (pas d'auth, pas de rate limit)
app.get('/health', (_req: Request, res: Response) => {
  return res.status(200).json({ status: 'ok' });
});

// â›“ï¸ Ã€ partir d'ici : rate limit + auth par clÃ© API
app.use(rateLimiter);
app.use(apiKeyAuth);

// Routes protÃ©gÃ©es
app.use('/api/partner', partnerValidation);
app.use('/api/ai', aiRouter);

// DÃ©marrage du serveur
app.listen(PORT, '0.0.0.0', () => {
  console.log(`Server running on port ${PORT}`);
});

export default app;
